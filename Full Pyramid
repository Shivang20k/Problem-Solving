int main() {
	// Your code goes here;
	int r, c;
	cin >> r;
	cin >> c;
  for(int row = 0; row < r ; row++)
	{
		for(int i = 0; i < r-row-1  ; i++)
		{
		    cout << "  ";
		}
		for ( int j = r-row-1  ; j <= r -1 + row  ; j++)
		{
		      cout << "X ";
		}
		cout << endl;
	 }
 }  
